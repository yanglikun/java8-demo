<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}|%X{invokeNo}|%thread|%-5level|%logger{36}[%F:%L]|%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="access-log" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="id.jd.train.trainid" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <!-- 输出SQL -->
    <logger name="id.jd.train.trainid.dao.mapper" level="error" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.jd.xn.autoloadproperties" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="xn-ucc" level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>